
<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<nav class="navbar navbar-light bg-light justify-content-between">
   <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="status">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</nav>
<table class="table">
<thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Date init</th>
      <th>Date finish</th>
      <th>State</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
<tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.content %></td>
        <td><%= project.date_init %></td>
        <td><%= project.date_finish %></td>
        <td><%= project.status %></td>
        <td><%= link_to 'Show', project %> | <%= link_to 'Edit', edit_project_path(project) %> | <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
   
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
<br>
<%= link_to 'Index', projects_path %>
  

  